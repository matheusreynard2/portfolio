public class Empregado {
	
	private String nome;
	private String funcao;
	private double salario;
	
	public Empregado(String nome, String funcao, double salario) {
		this.nome = nome;
		this.funcao = funcao;
		this.salario = salario;
	}
	
	
	public class CalculadorSalario {
		
		public double calcularSalario(Empregado empregado) {
			// Lógica para calcular o salário
			return salario;
		}
		
	}

}

